<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <tr id='content' >
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Edit', root_path(:post_id => post.id) %></td>
    <td><%= link_to 'Destroy', post_path(post),method: :delete,data: { confirm: 'Are you sure?' } %></td>
  </tr>
</table>