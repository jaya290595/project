<%= form_for @post, remote: :true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title , class: "title"%>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text , class: "text"%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
<h1>Posts</h1>
<div id = "content">
  <%= render @posts%> 
</div>


